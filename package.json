    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "alpinejs": "^3.13.0",
    "node-fetch": "^3.3.2",
    "xml2js": "^0.6.2"
  }
}
